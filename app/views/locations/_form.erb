<% form_for(@location, :html => { :multipart => true } ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<div id="form-nav">
  <%= link_to(image_tag('icons/back.png') + 'Back to list', locations_path )%>
</div>
